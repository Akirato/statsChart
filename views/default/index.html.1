    {{if len(request.args)>0:}}
      {{=request.args[0].capitalize()}}
    {{else:}}
      Select the Company
    {{pass}}
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    {{for i in listCompany():}}
    {{if len(request.args)>0 and request.args[0]==i[0].lower():}}
    {{else:}}
    <li>{{=A(i[0], callback = URL(c='default',f='dataPictures',args=['full',str(i[0].lower())]), target="dataPics")}}</li>
    {{pass}}
    {{pass}}
  </ul>
</div>
<div>
{{companies = listCompany()}}
{{if len(request.args)>0:}}
{{for company in companies:}}
{{if company[0].lower() == request.args[0]:}}
<p>{{=company}}</p>
{{pass}}
{{pass}}
{{pass}}
<br>
</div>
<div id="dataPics" style="border: solid 2px;">
    <ul>
    <li><h3>Select the Company that you want the statistics for.</h3></li>
